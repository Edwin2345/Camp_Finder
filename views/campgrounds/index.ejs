<% layout('./layout/boilerplate.ejs') %>
<div id="map" style="width: 100%; height: 500px"></div>
<h1 class="mt-4">All Campgrounds</h1>
<h3><a href="/campgrounds/new">Create New Campground</a></h3>
<% for( let camp of campArr ) { %>
    <div class="card my-md-5">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= camp.images[0].url %>" alt="camp image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="fw-semibold"><%=camp.location%></p>
                    <p class="card-text"><%= camp.description %></p>
                   <form action="/campgrounds/<%= camp._id %>">
                   <button class="btn btn-primary mt-3">View <%=camp.title%></button>
                   </form>
                </div>
            </div>
        </div>
    </div>
<% } %>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds = {features: <%-JSON.stringify(campArr)%>}
</script>
<script src="/scripts/clusterMap.js"></script>

