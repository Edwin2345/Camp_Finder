<% layout('./layout/boilerplate.ejs') %>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <form class="col-8 offset-2 form-validation" action="/campgrounds/<%= camp._id %>?_method=PUT" method="post" novalidate enctype="multipart/form-data">
      <section class="my-4">
          <label class="form-label fw-bold" for="title">Campground Title</label>
          <input required class="form-control border border-black fw-medium" type="text" id="title" name="campground[title]" value="<%= camp.title %>">
          <div class="valid-feedback">
            Looks good!
          </div>      
          <div class="invalid-feedback">
            Please enter a title.
          </div>  
      </section>
      <section class="my-4">
          <label class="form-label fw-bold" for="location">Campground Location</label>
          <input required class="form-control border border-black fw-medium" type="text" id="location" name="campground[location]" value="<%= camp.location %>">
          <div class="valid-feedback">
            Looks good!
          </div> 
          <div class="invalid-feedback">
            Please enter a location.
          </div>         
      </section>
      <label class="form-label fw-bold" for="price">Price Per Night</label>
      <div class="input-group">
          <span class="input-group-text border border-black">$</span>
          <input value="<%= camp.price %>" required type="number" min="0" placeholder="0.00" step="0.01" class="form-control border border-black fw-medium" aria-label="Amount (to the nearest dollar)" id="price" name="campground[price]">
          <div class="valid-feedback">
            Looks good!
            </div>  
            <div class="invalid-feedback">
                Please enter a valid price.
            </div>    
        </div>
      <section class="my-4">
          <label class="form-label fw-bold" for="description">Description</label>
          <textarea rows="3" maxlength="350" class="form-control border border-black fw-medium" type="text" id="description" name="campground[description]" required><%= camp.description %></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
          <div class="invalid-feedback">
            Please enter a description.
          </div>
       </section>
       <section class="my-4">
        <label class="form-label fw-bold" for="images">Add Additional Images</label>
        <input placeholder="upload more images.." class="form-control border border-black fw-medium" type="file" name="campground[images]" id="images" multiple>
      </section>
      <section class="my-4">
        <label class="form-label fw-bold d-block" for="images delete">Delete Existing Images</label>
        <div  class="row row-cols-1 row-cols-md-4 g-4 mb-3">
        <% camp.images.forEach( function(img, i){ %>
            <div>
              <img src=<%=img.url%> class="img-thumbnail d-block" alt="camp image" id="image-<%=i%>">
              <div class="form-check-inline">
                  <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
              </div>
              <label for=""image-<%=i%>">Delete</label>
            </div>
        <% }) %>
       </div>
        
      </section>
      <button class="btn btn-success py-2 my-1">Update Campground</button>
      <a  href="/campgrounds/<%= camp._id %>" class="d-inline btn btn-danger py-2 my-1 ms-4">Cancel</a>
  </form>
  </div>